<p style="color: green"><%= notice %></p>
<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <div class="d-flex flex-row">
      <div class="card text-center" style="width:250px">
        <div class="card-body">
          <%= render post %>
        </div>
        <div class="card-footer">
          <%= link_to "Show this post", post, class: "btn btn-outline-primary mr-2" %>
        </div>
      </div>
    </div>
  <% end %>
    
</div>