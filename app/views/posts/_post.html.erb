<div class="card text-center" style="width:200px">
  <div class="card-header">
    <strong><%= User.find(post.user_id).email %></strong>
    <blockquote class="blockquote mb-0">
      <%= post.text %>
    </blockquote>
  </div>
  <div class="card-body">
    <div id="<%= dom_id post %>">
      <% if post.image.persisted? %>
        <IMG src="<%= url_for(post.image) %>" style="height:100px">
      <% end %>
      <% if !post.images.nil? 
          post.images.each { |img| %>
            <IMG src="<%= url_for(img) %>" style="height:100px">
          <% } %>
      <% end %>
      debugger
      <% if post.avatar.staged %>
          <IMG src="<%= url_for(post.avatar) %>" style="height:100px">
      <% end %>
    </div>
  </div>
</div>