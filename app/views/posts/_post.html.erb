<div class="card text-center" style="width:200px">
  <div class="card-header">
    <strong><%= User.find(post.user_id).email %></strong>
    <blockquote class="blockquote mb-0">
      <%= post.text %>
    </blockquote>
  </div>
  <div class="card-body">
    <div id="<%= dom_id post %>">
      <% if post.image.persisted? %>Amazon one:
        <IMG src="<%= url_for(post.image) %>" style="height:100px">
      <% end %>
      <% if !post.images.nil? 
          post.images.each { |img| %><br>Amazon n:
            <IMG src="<%= url_for(img) %>" style="height:100px">
          <% } %>
      <% end %>

      <% if !post.avatar.nil? %> <br>CL uploader:
          <%= cl_image_tag post.avatar, :width=>150, :crop=>"fill" %>
      <% end %>
      
      <!-- #% debugger %-->
      <% if post.ava.persisted? %><br> Cl not uploader:
        <%= cl_image_tag post.ava.key, :width=>150 %>
      <% end %>
    </div>
  </div>
</div>